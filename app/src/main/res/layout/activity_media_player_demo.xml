<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MediaPlayerDemo">

    <TextView android:text="Music Palyer"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/mptextview1"
              android:textSize="35dp"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutorials point"
            android:id="@+id/textView"
            android:layout_below="@+id/mptextview1"
            android:layout_centerHorizontal="true"
            android:textColor="#ff7aff24"
            android:textSize="35dp" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mpimageView"
            android:layout_below="@+id/mptextview1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_delete_black_24dp"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forward"
            android:id="@+id/mpbutton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pause"
            android:id="@+id/mpbutton2"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/mpimageView"
            android:layout_alignStart="@+id/mpimageView" android:layout_marginLeft="-90dp"
            android:layout_marginStart="-90dp" android:layout_marginBottom="-5dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:id="@+id/mpbutton3"
            android:layout_alignTop="@+id/mpbutton2"
            android:layout_toRightOf="@+id/mpbutton2"
            android:layout_toEndOf="@+id/mpbutton2" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rewind"
            android:id="@+id/mpbutton4"
            android:layout_alignTop="@+id/mpbutton3"
            android:layout_toRightOf="@+id/mpbutton3"
            android:layout_toEndOf="@+id/mpbutton3" />

    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mpseekBar"
            android:layout_alignLeft="@+id/mptextview1"
            android:layout_alignStart="@+id/mptextview1"
            android:layout_alignRight="@+id/mptextview1"
            android:layout_alignEnd="@+id/mptextview1"
            android:layout_above="@+id/mpbutton" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/mptextView2"
            android:layout_above="@+id/mpseekBar"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/mptextView3"
            android:layout_above="@+id/mpseekBar"
            android:layout_alignRight="@+id/mpbutton4"
            android:layout_alignEnd="@+id/mpbutton4" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/mptextView4"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_centerHorizontal="true" />

</RelativeLayout>

